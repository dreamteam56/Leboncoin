<div class="col-sm-4">
<div class="panel panel-default">
  <div class="panel-heading">
<h2><i class="fa fa-sign-in"></i>   Sign in</h2>
  </div>
  <div class="panel-body">

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => "form-horizontal") do |f| %>
  <div class="form-group"><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, :class => "form-control" %></div>

  <div class="form-group"><%= f.label :password %><br />
  <%= f.password_field :password , :class => "form-control"%></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", :class => "btn btn-success" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
<div class="col-sm-4"></div>
