.panel.panel-default
  .panel-heading
    %h2
      Modifier une annonce
  .panel-body
    .row
      = form_tag('/annonces/'+@annonce["id"].to_s, method: "put") do
        .col-sm-6
          .form-group
            %label{for: "exampleInputEmail1"} Titre
            %input#title.form-control{value: @annonce["title"], name: "title"}/
            %input#id.form-control{type: "hidden", value: @annonce["id"], name: "id"}
            %input#picture.form-control{type: "file",name: "picture",}
          .form-group
            %label{for: "exampleInputPassword1"} Description
            %textarea#description.form-control{rows: "3", name: "description"}= @annonce["description"]
          .form-group
            %label{for: "exampleInputPassword1"} Prix
            %input#price.form-control{value: @annonce["price"],type: "number", name: "price"}/
