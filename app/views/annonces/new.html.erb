<div class="panel panel-default">
  <div class="panel-heading">
    <h2>
      Créer une annonce
    </h2>
  </div>
  <div class="panel-body">
    <div class="row">
      <%= form_for Annonce.new, :html => {:multipart => true} do |a| %>
        <div class="col-sm-6">
          <div class="form-group">
            <%= a.label :title%> 
            <%= a.text_field :title,:class => "form-control" %>
            <%= hidden_field_tag 'user_id', current_user.id %>
          </div>
          <div class="form-group">
            <%= file_field_tag('annonce_uploads_attributes_uploads', multiple: true, name: "annonce[uploads_attributes][][picture]") %>
            <p>
              salut
            </p>
          </div>
          <div class="form-group">
            <%= a.label :description %>
            <%= a.text_area :description,:class => "form-control" %>

          </div>
          <div class="form-group">
            <%= a.label :price %>
            <%= a.number_field :price,:class => "form-control"%>
          </div>
          <div class="form-group">
            <%= a.submit  "Créer", :class => "btn btn-primary btn-block"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
