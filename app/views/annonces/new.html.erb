<div class="col-sm-2"></div>
<div class="col-sm-8">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2>
        Créer une annonce
      </h2>
    </div>
    <div class="panel-body">
      <div class="row">
        <%= form_for Annonce.new, :html => {:multipart => true} do |a| %>
          <div class="col-sm-12">
            <div class="form-group">
              <%= a.label :Titre%> 
              <%= a.text_field :title,:class => "form-control" %>
              <%= hidden_field_tag 'user_id', current_user.id %>
            </div>
            <div class="form-group">
              <%= a.label "Ajouter des images"%>
              <%= file_field_tag('annonce_uploads_attributes_uploads', multiple: true, name: "annonce[uploads_attributes][][picture]") %>
            </div>
            <div class="form-group">
              <%= a.label :Description %>
              <%= a.text_area :description,:class => "form-control" , :rows => 10%>

            </div>
            <div class="form-group">
              <%= a.label :Prix %>
              <%= a.number_field :price,:class => "form-control"%>
            </div>
            <div class="form-group">
            <%= select_tag "category_id", options_from_collection_for_select(@categories, "id", "name"), class: "form-control"%>
          </div>
            <div class="form-group">
              <%= a.submit  "Créer", :class => "btn btn-primary btn-block"%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>