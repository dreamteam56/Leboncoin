.row
  .col-sm-8
    .panel.panel-default
      .panel-heading
        %p= @annonces[0]["title"]
      .panel-body
        %img{src:""+ @annonces[0]["url"].to_s, style: "width:120px; height:140px;"}
    .panel.panel-default
      .panel-body
        %p= @annonces[0]["price"]
    .panel.panel-default
      .panel-body
        %p= @annonces[0]["description"]
  .col-sm-4
    - if @annonces[0]["user_id"] == current_user.id
      .panel.panel-default
        .panel-heading
          %p
            Gerer        
        .panel-body
          %button.btn.btn-primary.btn-lg.btn-block
            Modifier l'annonce
          %button.btn.btn-warning.btn-lg.btn-block
            Archiver l'annonce
          %button.btn.btn-danger.btn-lg.btn-block
            Supprimer l'annonce
    -else
      .panel.panel-default
        .panel-heading
          %p
            Contacter       
        .panel-body
          %p
            %i.fa.fa-user
          %p
            %i.fa.fa-phone
          %p
            %i.fa.fa-envelope
      .panel.panel-default
        .panel-heading
          %p
            Signaler      
        .panel-body    
          %button.btn.btn-danger.btn-lg.btn-block
            Signaler l'annonce